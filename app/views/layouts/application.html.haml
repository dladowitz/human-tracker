!!! 5
%html
%head
  %title Human Tracker
  = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
  = javascript_include_tag "application", "data-turbolinks-track" => true
  = csrf_meta_tags

%body
  %p.notice
    = notice
  %p.alert
    = alert

  -if current_user
    %div
      = button_to "log out", destroy_user_session_path, :method => :delete

  = yield
